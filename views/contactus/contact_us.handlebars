<div class="row">

  <div class="col-lg-12" id="wrap-contact-us-form">
        <h2>CONTACT US</h2>

    <form action="/contact_us/send" method="post" class="form-horizontal form-contact-us">

        <div class="form-group">
          <label class="col-sm-2 control-label">Name: </label>
          <div class="col-sm-10">
          <input type="text" name="name" size="30" maxlength="100" placeholder="Your Name...">
          </div>
        </div>
         
        <div class="form-group">
          <label class="col-sm-2 control-label">Email: </label>
            <div class="col-sm-10">
              <input type="email" name="email" size="30" maxlength="100" placeholder="Your Email...">
            </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label" for="comments">Comments:</label>
          <div class="col-sm-10">
            <textarea rows="4" cols="40" id="comments" name="content" placeholder="Your Message..."></textarea>
          </div>
        </div>
        <div class="form-group">
        <label class="col-sm-2 control-label" for="submit"></label>

          <div class="col-sm-10">
            <input type="submit" id="main-btn" value="Submit" />
          </div>
        </div>
        {{!-- <label><input type="checkbox" name="subscribe" checked="checked" /> Sign me up for email updates</label><br /> --}}
        {{!-- <input type="submit" id="main-btn" value="Submit" /> --}}
    </form>

  </div>

</div>
