
    <div class="container" style="background-color: white; width: 100%; height: 100%; padding: 40px">
        <div class="row" id="row-top-dash-images">
          {{#if noTakeAssessment}}
            <p class="alert alert-danger">{{noTakeAssessment}}</p>
          {{/if}}

          {{#if successFlash}}
            <h2 style="font-size: 36px">{{successFlash}}!</h2>
          {{/if}}

          {{#if taken}}

            <p class="alert alert-danger">{{taken}}</p>
          {{/if}}  
        </div>
        

        <div class="row">
          <div class="col-xs-12 col-sm-4 wrap-results">

              <a href="/users/view-results">

              <p class="dash-h3s"><span class="glyphicon glyphicon-th-list" aria-hidden="true">     </span>               Assessment Results</p>
              </a>
          </div>
          <div class="col-xs-12 col-sm-4 wrap-results">
            {{#if user.assessmentTaken}}

            <a href="#" class="disabled_a_href">
         
            <p class="dash-h3s"><span class="glyphicon glyphicon-ok" aria-hidden="true"> </span>         You Took The Clinical Trial Assessment</p>
            </a>
            {{else}}
            <a href="/tools/start-health-assessment">
           
            <p class="dash-h3s"><span class="glyphicon glyphicon-list-alt" aria-hidden="true">        </span>         Take The Clinical Trial Assessment</p>
            </a>
            {{/if}}
          </div>
          <div class="col-xs-12 col-sm-4 wrap-results">
            <a href="/tools/my-genetics">
           
            <p class="dash-h3s"><span class="glyphicon glyphicon-stats" aria-hidden="true">     </span>          My Genetics</p>
            </a>
          </div>

          <!-- Add the extra clearfix for only the required viewport -->
          <div class="col-xs-12 col-sm-4 wrap-results">
            {{#if user.geneReportPurchase}}
            <a href="/charge" class="disabled_a_href">
           
            <p class="dash-h3s"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>                  You Purchased a Gene Report</p>
            {{else}}
            <a href="/charge">
            
            <p class="dash-h3s"><span class="glyphicon glyphicon-credit-card" aria-hidden="true">        </span>         Purchase Gene Report</p>
            {{/if}}
            </a>

          </div>

          <div class="col-xs-12 col-sm-4 wrap-results">
            <a href="/tools/amsler-test">

            <p class="dash-h3s"><span class="glyphicon glyphicon-tasks" aria-hidden="true">     </span>        Take the Amsler Test</p>
            </a>

          </div>
          <div class="col-xs-12 col-sm-4 wrap-results">
       
          <a href="/users/stargardt-disease-registry" >

          <p class="dash-h3s"><span class="glyphicon glyphicon-book" aria-hidden="true">     </span>         Stargardt's Disease Registry</p>
          </a>
         

          </div>
         

        </div>
    </div>
    

   
    